{
  "version": "0.1.0",
  "name": "p3e",
  "description": "Polymer 3 in an electron application",
  "repository": "git@github.com:visa4/thor.git",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "devtron": "^1.4.0",
    "electron": "4.0.5",
    "electron-builder": "~20.11.1",
    "polymer-cli": "^1.6.0",
    "wct-browser-legacy": "^1.0.0"
  },
  "scripts": {
    "postinstall": "cp app/config/config.json.dist app/config/config-development.json && cp app/config/config.json.dist app/config/config-production.json",
    "start": "export APP_ENVIRONMENT=development && electron ./app/main.js --inspect=5858",
    "build-polymer": "polymer build",
    "postbuild-polymer": "mv build/es6bundle/package.json build/es6bundle/app",
    "start-pre-build": "electron ./build/es6bundle/app/main.js --inspect=5858",
    "test": "polymer test",
    "dist": "cd build/es6bundle/app && electron-builder -c.extraMetadata.main=main.js -w --x64"
  },
  "dependencies": {
    "@polymer/app-layout": "^3.0.2",
    "@polymer/iron-icons": "^3.0.1",
    "@polymer/paper-icon-button": "^3.0.2",
    "@polymer/polymer": "^3.1.0",
    "@webcomponents/webcomponentsjs": "^2.0.0"
  },
  "build": {
    "appId": "p3e.app",
    "npmRebuild": false,
    "files": [
      "index.html",
      "main.js",
      "config/**/*",
      "style/**/*",
      "elements/**/*",
      "manifest.json",
      {
        "from": "../node_modules",
        "to": "../node_modules"
      }
    ],
    "directories": {
      "output": "../../../releases"
    },
    "win": {
      "legalTrademarks": "P3E",
      "asar": false
    }
  },
  "keywords": [
    "polymer 3",
    "electron",
    "starter kit polymer 3"
  ]
}
